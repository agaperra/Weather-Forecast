<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstGrayBlue</item>
        <item name="colorPrimaryVariant">@color/secondOrangeDawn</item>
        <item name="colorOnPrimary">@color/secondaryWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightCarrot</item>
        <item name="colorSecondaryVariant">@color/secondaryPearlWhite</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeatherForecast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherForecast.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherForecast.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>